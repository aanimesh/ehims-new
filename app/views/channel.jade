doctype html

html
    head
        link(rel="stylesheet",href="/foundation/css/foundation.min.css")
        link(rel="stylesheet",href="/myassets/css/channel.css")
        script.
            var messages = !{JSON.stringify(messages)};
            var online   = !{JSON.stringify(online)};
            var username = "!{user}";
            var channel  = "!{channel}"; 
            var cur_root = null; // this variable stores the parent to the
                                 // current encapsulated chat
    body
        nav.top-bar#navbar
            ul.title-area
                li.name
                    h1: a !{channel}
            section.top-bar-section
                ul.left
                    li
                        a Chatting as: !{user}
                ul.right
                    li
                        a Logout

        #messages-column
            #messages-view
                .alert-box.radius.message.message-other
                    p This is a message from another user 
                .alert-box.radius.message.message-other
                    p This is a message from another user 
                .alert-box.success.radius.message.message-user
                    p This is a message from you 
                .alert-box.radius.message.message-other
                    p This is a message from another user 
                .alert-box.radius.message.message-other
                    p This is a message from another user 
                .alert-box.success.radius.message.message-user
                    p This is a message from you 
                .alert-box.radius.message.message-other
                    p This is a message from another user 
                .alert-box.radius.message.message-other
                    p This is a message from another user 
                .alert-box.success.radius.message.message-user
                    p This is a message from you 

            #message-input
                #message-text
                    textarea#message(style="resize:none;",
                                     rows=3,
                                     placeholder="Type your message here...")
                #message-buttons
                    a.button.success.expand Send

        #view-column
            #chat-view
                p.
                    View all the chats here
            #users-view
                p.
                    Online users

        script(src="/jquery/dist/jquery.min.js")
        script(src="/foundation/js/foundation.min.js")
        script(src="/socket.io-client/socket.io.js")
        script(src="/myassets/js/channel.js")
        script.
            $(document).foundation();


