doctype html

html
    head
        link(rel="stylesheet",href="/foundation/css/foundation.min.css")
        link(rel="stylesheet",href="/fontawesome/css/font-awesome.css")
        script(src="/jquery/dist/jquery.min.js")
        script(src="/foundation/js/foundation.js")
        script.
            var channels = !{JSON.stringify(channels)};
    body
        .row(style="margin-top:5%")
            .large-6.medium-6.columns.large-offset-3.medium-offset-3
                a(class="button"
                    target="_blank"
                    href="/download?channel=all")
                        | Download all channels
                
                hr
                h4  Or download an individual channel
                ul.side-nav
                    each channel in channels
                        li: h6
                            div
                                a(
                                    href="/download?channel=#{channel._id}"
                                    target="_blank") 
                                    i.fa.fa-arrow-circle-down
                                    | #{channel.name} 
                            
